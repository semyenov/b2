{
  "name": "b2",
  "type": "module",
  "version": "1.1.0",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "coverage:check": "bun run scripts/check-coverage.ts",
    "dev": "bun run --watch src/server/index.ts",
    "dev:web": "vite",
    "build": "bun run build:web",
    "build:server": "bun build src/server/index.ts --target=bun --outdir=dist/server --external=postgres --external=c12 --external=drizzle-orm",
    "build:web": "vite build",
    "build:all": "bun run build:server && bun run build:web",
    "preview:web": "vite preview",
    "dev:all": "bun run dev & bun run dev:web",
    "start": "NODE_ENV=production bun run src/server/index.ts",
    "start:prod": "NODE_ENV=production bun run dist/server/index.js",
    "check": "bun tsc --noEmit",
    "type-check": "bun tsc --noEmit",
    "type-check:watch": "bun tsc --noEmit --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:reset": "bun run scripts/reset-db.ts --confirm",
    "db:view": "bun run scripts/db-viewer.ts",
    "migrate:users": "bun run scripts/migrate-users-to-postgres.ts",
    "dict:import": "bun run scripts/import-dictionary.ts",
    "dict:import:en": "bun run scripts/import-dictionary.ts ./data/dictionaries/english.txt en",
    "migrate:to-postgres": "bun run scripts/migrate-to-postgres.ts",
    "migrate:normalize": "bun run scripts/migrate-to-normalized-db.ts",
    "migrate:normalize:dry": "bun run scripts/migrate-to-normalized-db.ts --dry-run",
    "migrate:rollback": "bun run scripts/rollback-normalized-db.ts --confirm",
    "colors:migrate:dry": "bun run scripts/migrate-colors.ts --dry-run",
    "colors:migrate": "bun run scripts/migrate-colors.ts --apply",
    "colors:rollback": "bun run scripts/migrate-colors.ts --rollback",
    "colors:clean": "bun run scripts/migrate-colors.ts --clean-backups",
    "colors:analyze": "bun run scripts/analyze-colors.ts",
    "colors:analyze:verbose": "bun run scripts/analyze-colors.ts --verbose",
    "imports:to-alias": "bun run scripts/migrate-imports.ts --to-alias",
    "imports:to-alias:dry": "bun run scripts/migrate-imports.ts --to-alias --dry-run",
    "imports:to-relative": "bun run scripts/migrate-imports.ts --to-relative",
    "imports:to-relative:dry": "bun run scripts/migrate-imports.ts --to-relative --dry-run",
    "analyze:codebase": "bun run scripts/analyze-codebase.ts",
    "analyze:codebase:verbose": "bun run scripts/analyze-codebase.ts --verbose",
    "analyze:codebase:json": "bun run scripts/analyze-codebase.ts --json",
    "knip": "knip",
    "knip:production": "knip --production",
    "knip:exports": "knip --exports",
    "knip:dependencies": "knip --dependencies",
    "knip:fix": "knip --fix"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@sinclair/typebox": "^0.34.41",
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "c12": "^3.3.1",
    "consola": "^3.4.2",
    "drizzle-orm": "0.36.4",
    "elysia": "^1.4.12",
    "elysia-rate-limit": "^4.4.0",
    "memoirist": "^0.4.0",
    "postcss": "^8.5.6",
    "postgres": "^3.4.7",
    "radash": "^12.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14",
    "unstorage": "^1.17.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "bun-types": "^1.3.0",
    "drizzle-kit": "0.28.1",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "knip": "^5.66.0",
    "lint-staged": "^16.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,json,css,md}": [
      "eslint --fix"
    ]
  }
}
