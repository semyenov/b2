{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* ============================================ */
    /* Project-Specific Path Aliases */
    /* ============================================ */
    "baseUrl": ".",
    "paths": {
      /* Cross-layer imports - Shared code accessible from server/web */
      "@shared/*": ["src/shared/*"],
      "@shared/config/server": ["src/shared/config/server"],
      "@shared/config/server/*": ["src/shared/config/server/*"],
      "@shared/config/web": ["src/shared/config/web"],
      "@shared/config/web/*": ["src/shared/config/web/*"],

      /* Server-side imports - Clean architecture layers */
      "@server/*": ["src/server/*"],
      "@server/core/*": ["src/server/core/*"],
      "@server/domain/*": ["src/server/domain/*"],
      "@server/infrastructure/*": ["src/server/infrastructure/*"],
      "@server/presentation/*": ["src/server/presentation/*"],

      /* Web frontend aliases (all from src/web) */
      "@web/*": ["src/web/*"],
      "@components": ["src/web/components"],
      "@components/*": ["src/web/components/*"],
      "@hooks": ["src/web/hooks"],
      "@hooks/*": ["src/web/hooks/*"],
      "@utils": ["src/web/utils"],
      "@utils/*": ["src/web/utils/*"],
      "@lib/*": ["src/web/lib/*"],
      "@types": ["src/web/types"],
      "@types/*": ["src/web/types/*"],
      "@constants": ["src/web/constants"],
      "@constants/*": ["src/web/constants/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "data",
    "**/*.spec.ts",
    "**/*.test.ts",
    "scripts/legacy/**/*"
  ]
}
