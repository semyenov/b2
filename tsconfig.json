{
  "compilerOptions": {
    /* Environment - Latest ESNext for Bun */
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "baseUrl": ".",

    /* Comprehensive Path Aliases */
    "paths": {
      /* Cross-layer imports */
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],

      /* Web frontend (all from src/web) */
      "@web/*": ["src/web/*"],
      "@components": ["src/web/components"],
      "@components/*": ["src/web/components/*"],
      "@hooks": ["src/web/hooks"],
      "@hooks/*": ["src/web/hooks/*"],
      "@utils": ["src/web/utils"],
      "@utils/*": ["src/web/utils/*"],
      "@lib/*": ["src/web/lib/*"],
      "@types": ["src/web/types"],
      "@types/*": ["src/web/types/*"],
      "@constants": ["src/web/constants"],
      "@constants/*": ["src/web/constants/*"],
      "@config/*": ["src/web/config/*"]
    },

    /* Type checking - Strict mode */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,

    /* Emit */
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    /* Types */
    "types": ["bun-types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "data"]
}
